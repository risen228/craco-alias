{
  "compilerOptions": {
    "paths": {
      "@file": ["./src/file.js"],
      "@file2": ["src/file2.js"],
      "@dir/*": ["./src/dir/*"],
      "@dir2/*": ["././src/dir2/*"],
      "$dir3/*": ["src/dir3/*", "src/dir3"],
      "my-package": [
        "./node_modules/some-package",
        "./node_modules/some-package/*"
      ],
      "external-package": [
        "/absolute_path/external-package",
        "/absolute_path/external-package/*"
      ],
      "@material-ui": ["node_modules/@material-ui/ie-10/ie-10.js"]
    }
  }
}
